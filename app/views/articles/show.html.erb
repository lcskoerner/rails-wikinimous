<article>
  <div class="header">
    <h2><%= @article.title %></h2>
    <div class="article-controls">
      <%= link_to "Edit", edit_article_path %>
      <%= link_to "Destroy", article_path(@article), method: :delete, data: { confirm: "Delete #{@article.title}?"} %>
    </div>
  </div>
  <hr>
  <p><%= @article.content %></p>
</article>
